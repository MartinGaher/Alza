{
  "openapi": "3.0.1",
  "info": {
    "title": "EShop API",
    "version": "v2"
  },
  "paths": {
    "/api/v2/Products": {
      "get": {
        "tags": [
          "Products"
        ],
        "summary": "Gets all products v2",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 1
            }
          },
          {
            "name": "pageSize",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v2/Products/{id}": {
      "get": {
        "tags": [
          "Products"
        ],
        "summary": "Gets a product by its ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The ID of the product.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v2/Products/{id}/description": {
      "patch": {
        "tags": [
          "Products"
        ],
        "summary": "Update produst description",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The ID of the product.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "description": "The new description.",
          "content": {
            "application/json": {
              "schema": {
                "type": "string"
              }
            },
            "text/json": {
              "schema": {
                "type": "string"
              }
            },
            "application/*+json": {
              "schema": {
                "type": "string"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": { }
}